<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

     <TextView
         android:id="@+id/TV_DadesCompartides"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Dades Compartides"
         android:textSize="20dp"
         android:background="#F10909"
         android:padding="20dp"
         />

     <FrameLayout
         android:id="@+id/FL_Fragment"
         android:layout_width="match_parent"
         android:layout_height="300dp"
         android:layout_marginTop="20dp"
         android:layout_below="@id/TV_DadesCompartides"
         />
     <Button
         android:id="@+id/BTN_ObrirFragment1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Obrir Fragment 1"
         android:layout_below="@id/FL_Fragment"
         android:layout_marginTop="20dp"
         />
     <Button
         android:id="@+id/BTN_ObrirFragment2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Obrir Fragment 2"
         android:layout_below="@id/FL_Fragment"
         android:layout_marginTop="20dp"
         android:layout_alignParentRight="true"
         />
     <Button
         android:id="@+id/BTN_ObrirActivity1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Obrir Activity 1"
         android:layout_below="@id/BTN_ObrirFragment1"
         android:layout_marginTop="20dp"
         />

</RelativeLayout>